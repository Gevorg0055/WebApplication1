@model Employee
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Layouts/DefaultLayout.cshtml";
}

<h2>Employee Registration</h2>
<form method="post" action="/employee/edit">
    <div>
        <label>Name</label>
        <input name="Name" type="text" class="input-group-text">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>    


     <div>
        <label>Surname</label>
        <input name="Surname" type="text" class="input-group-text">
        <span asp-validation-for="Surname" style="color:red"></span>
    </div>  


     <div>
        <label>Birth date</label>
        <input name="BirthDate" type="text" class="input-group-text">
        <span asp-validation-for="BirthDate" style="color:red"></span>
    </div>  


     <div>
        <label>Gender</label>
        <input name="Gender" type="text" class="input-group-text">
        <span asp-validation-for="Gender" style="color:red"></span>
    </div>  


     <div>
        <label>Contact number</label>
        <input name="ContactNumber" type="text" class="input-group-text">
        <span asp-validation-for="ContactNumber" style="color:red"></span>
    </div>  


     <div>
        <label>Email</label>
        <input name="Email" type="text" class="input-group-text">
        <span asp-validation-for="Email" style="color:red"></span>
    </div>  


    <button class="btn btn-outline-success mt-3">Update</button>
</form>
